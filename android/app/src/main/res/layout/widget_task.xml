<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:padding="14dp"
    android:background="@drawable/widget_bg"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="120dp">

    <!-- Header with title, progress, and pet -->
    <LinearLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="4dp">

        <TextView
            android:id="@+id/title"
            android:text="Today's Tasks"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textColor="@android:color/white"
            android:shadowColor="#40000000"
            android:shadowDx="0"
            android:shadowDy="1"
            android:shadowRadius="2"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/remaining_text"
            android:text="All caught up"
            android:textSize="13sp"
            android:textColor="@android:color/white"
            android:alpha="0.9"
            android:layout_marginEnd="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <Button
            android:id="@+id/btn_add_header"
            android:text="+ Tasks"
            android:layout_width="wrap_content"
            android:layout_height="32dp"
            android:textSize="13sp"
            android:layout_marginStart="2dp"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:background="@drawable/btn_grad_indigo_blue"
            android:textColor="@android:color/white"/>
    </LinearLayout>

    <!-- Subtle divider under header -->
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="2dp"
        android:alpha="0.2"
        android:background="#FFFFFF"/>

    <!-- Compact single-task view (shown in smallest size) -->
    <LinearLayout
        android:id="@+id/compact_container"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp"
        android:background="@drawable/widget_card"
        android:layout_marginTop="8dp">

        <TextView
            android:id="@+id/top_task"
            android:text="No tasks for today"
            android:textSize="15sp"
            android:textColor="#111827"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="2"
            android:ellipsize="end"/>
    </LinearLayout>

    <!-- Expanded list view (shown when widget is larger) -->
    <LinearLayout
        android:id="@+id/list_container"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp"
        android:background="@drawable/widget_card"
        android:layout_marginTop="8dp"
        android:visibility="gone">

        <ListView
            android:id="@+id/list_view"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:divider="@drawable/widget_list_divider"
            android:dividerHeight="1dp"
            android:scrollbars="vertical"
            android:fadingEdgeLength="8dp"
            android:requiresFadingEdge="vertical"/>

        <!-- Empty state for list mode -->
        <TextView
            android:id="@+id/empty_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="12dp"
            android:text="No tasks for today"
            android:textSize="14sp"
            android:textColor="#111827"
            android:gravity="center"
            android:visibility="gone"/>
    </LinearLayout>

</LinearLayout>
