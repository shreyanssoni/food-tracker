<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="20dp"/>
            <gradient
                android:type="linear"
                android:angle="45"
                android:startColor="#5B63F6"
                android:centerColor="#3BA3F6"
                android:endColor="#18B7A9"/>
        </shape>
    </item>
    <!-- Inner translucent layer for frosted look -->
    <item android:top="2dp" android:bottom="2dp" android:left="2dp" android:right="2dp">
        <shape android:shape="rectangle">
            <corners android:radius="18dp"/>
            <solid android:color="#1FFFFFFF"/>
            <stroke android:width="1dp" android:color="#26FFFFFF"/>
        </shape>
    </item>
</layer-list>
